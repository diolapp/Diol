    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/contact_detail_list_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_extra_top_padding" />
</FrameLayout>
